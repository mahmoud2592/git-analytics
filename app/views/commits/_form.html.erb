<%= form_with(model: commit) do |form| %>
  <% if commit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(commit.errors.count, "error") %> prohibited this commit from being saved:</h2>

      <ul>
        <% commit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :sha, style: "display: block" %>
    <%= form.text_field :sha %>
  </div>

  <div>
    <%= form.label :author_name, style: "display: block" %>
    <%= form.text_field :author_name %>
  </div>

  <div>
    <%= form.label :author_email, style: "display: block" %>
    <%= form.text_field :author_email %>
  </div>

  <div>
    <%= form.label :message, style: "display: block" %>
    <%= form.text_area :message %>
  </div>

  <div>
    <%= form.label :committed_date, style: "display: block" %>
    <%= form.datetime_field :committed_date %>
  </div>

  <div>
    <%= form.label :repository_id, style: "display: block" %>
    <%= form.number_field :repository_id %>
  </div>

  <div>
    <%= form.label :day, style: "display: block" %>
    <%= form.datetime_field :day %>
  </div>

  <div>
    <%= form.label :week, style: "display: block" %>
    <%= form.datetime_field :week %>
  </div>

  <div>
    <%= form.label :month, style: "display: block" %>
    <%= form.datetime_field :month %>
  </div>

  <div>
    <%= form.submit %>
  </div>
